<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo3"
    tools:context=".PantallaGanaste">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/sancreek"
        android:text="@string/txtGanaste"
        android:textColor="#fff"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageBrazoDerecho"
        android:layout_width="70dp"
        android:layout_height="166dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="140dp"
        android:contentDescription="@string/txtdescripcion"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/brazo_derecho" />

    <ImageView
        android:id="@+id/imageCuerpo"
        android:layout_width="70dp"
        android:layout_height="166dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="180dp"
        android:contentDescription="@string/txtdescripcion"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/cuerpo" />


    <ImageView
        android:id="@+id/imagePiernaDerecha"
        android:layout_width="70dp"
        android:layout_height="166dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="55dp"
        android:contentDescription="@string/txtdescripcion"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/pierna_derecha" />

    <ImageView
        android:id="@+id/imagePiernaIzquierda"
        android:layout_width="70dp"
        android:layout_height="166dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="55dp"
        android:contentDescription="@string/txtdescripcion"
        android:rotation="5"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/pierna_izquierda" />

    <ImageView
        android:id="@+id/imageBrazoIzquierdo"
        android:layout_width="70dp"
        android:layout_height="166dp"
        android:layout_marginEnd="205dp"
        android:layout_marginBottom="140dp"
        android:contentDescription="@string/txtdescripcion"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/brazo_izquierdo" />

    <ImageView
        android:id="@+id/imageCabeza"
        android:layout_width="100dp"
        android:layout_height="122dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="320dp"
        android:contentDescription="@string/txtdescripcion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/cara_feliz" />
</androidx.constraintlayout.widget.ConstraintLayout>